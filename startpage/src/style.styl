@import url('file:///home/mrhudson/.cache/wal/colors.css');

*
	margin 0
	padding 0
	box-sizing border-box
	user-select none
	-moz-user-select none

body
	height 100vh
	width 100vw
	
	display flex
	align-items center
	justify-content center

	background var(--background)
	color var(--foreground)
	font-family "Iosevka Term"
	font-size 12pt

a
	color inherit
	text-decoration none

h1
	font-weight 300

#cat1
	color var(--color1)
#cat2
	color var(--color2)
#cat3
	color var(--color3)
#cat4
	color var(--color4)
#cat5
	color var(--color5)
#cat6
	color var(--color6)

.row
	padding .5em 0

	span.link
		opacity .8
		transition opacity .2s ease-in-out

		&:before
			content '/'
			padding .5em
			opacity .2

		&:hover
			opacity 1
